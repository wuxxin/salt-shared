{
  "builders": [
  {
    "vm_name": "vivid",
    "type": "virtualbox",
    "http_directory": "http",
    "iso_url": "http://archive.ubuntu.com/ubuntu/dists/vivid-updates/main/installer-amd64/current/images/netboot/mini.iso",
    "iso_checksum": "94eb14114323daed4251fe84c9cb4948c2210a856c58500b79a32feb1fea3702",
    "iso_checksum_type": "sha256",
    "guest_os_type": "Ubuntu_64",
    "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
    "virtualbox_version_file": ".vbox_version",
    "ssh_username": "vagrant",
    "ssh_password": "vagrant",
    "ssh_wait_timeout": "10000s",
    "boot_command": [
      "<esc><esc><wait>",
      "linux fb=false ",
      "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/./preseed-simple-http.cfg ",
      "auto=true priority=critical debconf/frontend=noninteractive DEBCONF_DEBUG=1 ",
      "hostname={{ .Name }} ",
      "initrd=initrd.gz -- <enter>"
    ],
    "shutdown_command": "echo 'vagrant'|sudo -S shutdown -P now",
    "disk_size": 11264,
    "boot_wait": "10s",
    "vboxmanage": [
      ["modifyvm", "{{.Name}}", "--memory", "512"],
      ["modifyvm", "{{.Name}}", "--cpus", "1"]
    ]
  },
  {
    "vm_name": "vivid",
    "type": "qemu",
    "http_directory": "http",
    "iso_url": "http://archive.ubuntu.com/ubuntu/dists/vivid-updates/main/installer-amd64/current/images/netboot/mini.iso",
    "iso_checksum": "94eb14114323daed4251fe84c9cb4948c2210a856c58500b79a32feb1fea3702",
    "iso_checksum_type": "sha256",
    "ssh_username": "vagrant",
    "ssh_password": "vagrant",
    "ssh_wait_timeout": "10000s",
    "boot_command": [
      "<esc><esc><wait>",
      "linux fb=false ",
      "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/./preseed-simple-http.cfg ",
      "auto=true priority=critical debconf/frontend=noninteractive DEBCONF_DEBUG=1 ",
      "hostname={{ .Name }} ",
      "initrd=initrd.gz -- <enter>"
    ],
    "shutdown_command": "echo 'vagrant'|sudo -S shutdown -P now",
    "disk_size": 11264,
    "boot_wait": "10s",
    "format": "qcow2",
    "headless": "true",
    "accelerator": "kvm",
    "qemuargs": [[ "-m", "512m" ]]
  }],
  "provisioners": [{
    "type": "shell",
    "execute_command": "echo 'vagrant'|{{.Vars}} sudo -S -E bash '{{.Path}}'",
    "scripts": [
      "linux_script/base.sh",
      "linux_script/vagrant.sh",
      "linux_script/vmtools.sh",
      "linux_script/grub.sh",
      "linux_script/cleanup.sh",
      "linux_script/zerodisk.sh"
    ]
  }]
}
