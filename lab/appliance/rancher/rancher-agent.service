[Unit]
Description=Rancher Agent
After=docker.service
ConditionPathExists=!/app/etc/flags/no.rancher-agent
Requires=docker.service
OnFailure=service-failed@%n.service
StartLimitInterval=300
StartLimitIntervalSec=300
StartLimitBurst=5

[Service]
Restart=on-failure
RestartSec=5
TimeoutStartSec=5min
TimeoutStopSec=15
ExecStartPre=-/usr/bin/docker kill %n
ExecStartPre=-/usr/bin/docker rm %n
ExecStartPre=/usr/bin/docker pull prom/alertmanager:v0.9.1
docker_container.running:
  - name: rancher-server
  - image: rancher/server:{{ rancher.server.tag }}
  - port_bindings:
    - {{ rancher.server.ip }}:{{ rancher.server.port }}:8080
  - environment:
    
    --db-host --db-port --db-user --db-pass --db-name 
  - restart_policy: always
  - require:
    - dockerng: rancher-server-image

ExecStart=/usr/bin/docker run \
    --rm \
    --name %n \
    -p {{ salt['pillar.get']('docker:ip') }}:9093:9093 \
    --net bridge \
    -v /app/etc/alertmanager.yml:/etc/alertmanager.yml \
    -v /app/alertmanager:/data \
    prom/alertmanager:v0.9.1 \
    -config.file=/etc/alertmanager.yml \
    -storage.path=/data

[Install]
WantedBy=multi-user.target
