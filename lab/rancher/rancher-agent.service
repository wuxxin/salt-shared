[Unit]
Description=Rancher Agent
After=docker.service
ConditionPathExists=!/etc/rancher/no.rancher-agent
ConditionPathExists=/etc/rancher/rancher-agent.env
Requires=docker.service
#OnFailure=service-failed@%n.service
StartLimitInterval=300
StartLimitIntervalSec=300
StartLimitBurst=5

[Service]
Restart=on-failure
RestartSec=5
TimeoutStartSec=5min
TimeoutStopSec=15
EnvironmentFile=/etc/rancher/rancher-agent.env
ExecStartPre=-/usr/bin/docker kill %n
ExecStartPre=-/usr/bin/docker rm %n
ExecStartPre=/usr/bin/docker pull ${AGENTIMAGE}
ExecStart=/usr/bin/docker run \
    --rm \
    --name %n \
    --net=host \
    --privileged \
    -v /etc/kubernetes:/etc/kubernetes \
    -v /var/run/docker.sock:/var/run/docker.sock \
{%- if settings.agent.dns.ip|d(false) and settings.agent.dns.search|d(false) %}
    --dns={{ settings.agent.dns.ip }} \
    --dns-search={{ settings.agent.dns.search }} \
{%- endif %}
{%- if settings.agent.env|d(false) %}
{%- for n,d in settings.agent.env.iterate() %}
    -e {{ n }}='{{ d }}' \
{%- endfor %}
{%- endif %}
    "${AGENTIMAGE}" \
    --server "https://${RANCHERSERVER}" \
    --token "${AGENTTOKEN}" \
    --ca-checksum "${CACHECKSUM}" \
    --etcd --controlplane --worker


# -v /var/run:/var/run \

[Install]
WantedBy=multi-user.target
