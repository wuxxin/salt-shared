[Unit]
Description=Knot DNS server {{ identity }}
Wants=network-online.target
After=network-online.target
Documentation=man:knotd(8) man:knot.conf(5) man:knotc(8)

[Service]
EnvironmentFile=/etc/default/{{ identity }}
ExecReload=/usr/sbin/knotc $KNOTD_ARGS reload
ExecStart=/usr/sbin/knotd $KNOTD_ARGS
Restart=on-abort

[Install]
WantedBy=multi-user.target
